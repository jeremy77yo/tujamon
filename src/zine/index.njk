<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>iridesce zine — tu jamon</title>
    <meta name="description" content="Iridesce — a visual zine by tu jamon. 20 pages of collage, poetry, and texture." />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />

    <meta property="og:type" content="website" />
    <meta property="og:title" content="iridesce zine — tu jamon" />
    <meta property="og:description" content="Iridesce — a visual zine by tu jamon. 20 pages of collage, poetry, and texture." />
    <meta property="og:image" content="/og-image.jpg" />
    <meta name="twitter:card" content="summary_large_image" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600&family=EB+Garamond:ital,wght@0,400;1,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/style.css" />
  </head>

  <body>
    <a class="back-link" href="/" aria-label="Back to gallery">&larr;</a>

    <div class="zine" id="zine">
      {# Spread 0: Cover alone #}
      <div class="zine-spread zine-spread--active" data-spread="0">
        <img class="zine-page" src="/images/zine/zine-01.webp" alt="Iridesce zine cover" loading="eager" draggable="false" />
      </div>

      {# Spreads 1-9: pairs of pages (2-3, 4-5, 6-7, ... 18-19) #}
      {% for s in range(1, 10) %}
        {% set left = s * 2 %}
        {% set right = left + 1 %}
        {% set lnum = left | string %}{% if left < 10 %}{% set lnum = "0" + lnum %}{% endif %}
        {% set rnum = right | string %}{% if right < 10 %}{% set rnum = "0" + rnum %}{% endif %}
        <div class="zine-spread" data-spread="{{ s }}">
          <img class="zine-page" src="/images/zine/zine-{{ lnum }}.webp" alt="Iridesce zine page {{ left }}" {% if s <= 1 %}loading="eager"{% else %}loading="lazy"{% endif %} draggable="false" />
          <img class="zine-page" src="/images/zine/zine-{{ rnum }}.webp" alt="Iridesce zine page {{ right }}" {% if s <= 1 %}loading="eager"{% else %}loading="lazy"{% endif %} draggable="false" />
        </div>
      {% endfor %}

      {# Spread 10: Last page alone #}
      <div class="zine-spread" data-spread="10">
        <img class="zine-page" src="/images/zine/zine-20.webp" alt="Iridesce zine last page" loading="lazy" draggable="false" />
      </div>

      <button class="zine-nav zine-nav--prev" id="zinePrev" aria-label="Previous page" style="display:none">
        <span class="zine-nav-hint">&lsaquo;</span>
      </button>
      <button class="zine-nav zine-nav--next" id="zineNext" aria-label="Next page">
        <span class="zine-nav-hint">&rsaquo;</span>
      </button>

      <div class="zine-counter" id="zineCounter">1 / 11</div>

      <div class="zine-info" id="zineInfo" style="display:none">
        <p class="zine-info-note">scan the barcodes in the zine for links to songs from the EP</p>
        <a class="zine-info-link" href="https://open.spotify.com/album/2w9LWbJeCj0t52gnDHpvm3?si=ZOSIt3tjQyyY72TByVcrPA" target="_blank" rel="noreferrer">listen to the full EP on spotify &nearr;</a>
        <a class="zine-info-link" href="/contact/">request a physical copy &rarr;</a>
      </div>
    </div>

    {% include "player.njk" %}

    <script>
    (function() {
      var spreads = document.querySelectorAll('.zine-spread');
      var total = spreads.length;
      var current = 0;
      var locked = false;

      var prevBtn = document.getElementById('zinePrev');
      var nextBtn = document.getElementById('zineNext');
      var counter = document.getElementById('zineCounter');
      var info = document.getElementById('zineInfo');

      function preload(idx) {
        if (idx >= 0 && idx < total) {
          var imgs = spreads[idx].querySelectorAll('img');
          for (var i = 0; i < imgs.length; i++) {
            if (imgs[i].loading === 'lazy') imgs[i].loading = 'eager';
          }
        }
      }

      function go(to, direction) {
        if (locked || to < 0 || to >= total || to === current) return;
        locked = true;

        var oldSpread = spreads[current];
        var newSpread = spreads[to];

        // Set up entry position
        newSpread.style.transition = 'none';
        newSpread.style.transform = 'translateX(' + (direction > 0 ? '40px' : '-40px') + ')';
        newSpread.style.opacity = '0';
        newSpread.classList.add('zine-spread--active');

        // Force reflow
        void newSpread.offsetWidth;

        // Animate both
        newSpread.style.transition = '';
        newSpread.style.transform = '';
        newSpread.style.opacity = '';

        oldSpread.style.transform = 'translateX(' + (direction > 0 ? '-40px' : '40px') + ')';
        oldSpread.style.opacity = '0';

        setTimeout(function() {
          oldSpread.classList.remove('zine-spread--active');
          oldSpread.style.transform = '';
          oldSpread.style.opacity = '';
          locked = false;
        }, 350);

        current = to;
        update();
      }

      function update() {
        counter.textContent = (current + 1) + ' / ' + total;
        prevBtn.style.display = current === 0 ? 'none' : '';
        nextBtn.style.display = current === total - 1 ? 'none' : '';
        info.style.display = current === total - 1 ? '' : 'none';

        // Preload adjacent spreads
        preload(current - 1);
        preload(current + 1);
      }

      // Click navigation
      prevBtn.addEventListener('click', function() { go(current - 1, -1); });
      nextBtn.addEventListener('click', function() { go(current + 1, 1); });

      // Keyboard navigation
      document.addEventListener('keydown', function(e) {
        if (e.key === 'ArrowRight' || e.key === ' ') {
          e.preventDefault();
          go(current + 1, 1);
        } else if (e.key === 'ArrowLeft') {
          e.preventDefault();
          go(current - 1, -1);
        } else if (e.key === 'Escape') {
          window.location.href = '/';
        }
      });

      // Touch/swipe navigation
      var touchStartX = 0;
      var touchStartY = 0;

      document.addEventListener('touchstart', function(e) {
        touchStartX = e.touches[0].clientX;
        touchStartY = e.touches[0].clientY;
      }, { passive: true });

      document.addEventListener('touchend', function(e) {
        var dx = e.changedTouches[0].clientX - touchStartX;
        var dy = e.changedTouches[0].clientY - touchStartY;

        if (Math.abs(dx) > 50 && Math.abs(dx) > Math.abs(dy)) {
          if (dx < 0) {
            go(current + 1, 1);
          } else {
            go(current - 1, -1);
          }
        }
      }, { passive: true });

      update();
    })();
    </script>
  </body>
</html>
